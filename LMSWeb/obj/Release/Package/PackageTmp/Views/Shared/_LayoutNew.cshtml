    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" />





</head>
<body>
    @{

        LMSBL.DBModels.TblUser model = new LMSBL.DBModels.TblUser();
        LMSBL.Repository.UserRepository ur = new LMSBL.Repository.UserRepository();

        model = (LMSBL.DBModels.TblUser)Session["UserSession"];
        if (model == null)
        {
            model = ur.IsValidUser("jeanihp@hotmail.com", "123456");
        }
        if (model == null)
        {
            Response.Redirect(Url.Action("Logout", "Login", null));
        }
        var baseURL = System.Configuration.ConfigurationManager.AppSettings["BaseURL"];
        var fullname = model.FirstName + " " + model.LastName;
        var helpDetails = "support@rockettech.co.nz \n Phone No: 9834545425";
        var profileImage = model.profileImage;
    }

    <nav class="navbar navbar-expand-lg navbar-light main-nav">
        <a class="navbar-brand" href="@baseURL\Home\Index"><img src="~/assets/images/rt_logo.png" class="rt-logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <ul class="nav navbar-nav navbar-right mt-lg-3">
                <li class="nav-item @Html.IsSelected(controller:"Home",action: "Index")">
                    <i class="fas fa-home"></i>
                    <a class="nav-link @Html.IsSelected(controller:"Home",action: "Index")" href="@baseURL\Home\Index">Home <span class="sr-only">(current)</span></a>
                </li>
                @if (model.RoleId == 3)
                {
                    <li class="nav-item @Html.IsSelected(controller:"Assignment",action: "MyAssignments")">
                        <i class="fas fa-book-open"></i>
                        <a class="nav-link @Html.IsSelected(controller:"Assignment",action: "MyAssignments")" href="@baseURL\Assignment\MyAssignments">My Learning</a>
                    </li>
                    <li class="nav-item @Html.IsSelected(controller:"Reports",action: "Index,DetailReport,AttemptReport")">
                        <i class="fas fa-poll"></i>
                        <a class="nav-link @Html.IsSelected(controller:"Reports",action: "Index,DetailReport,AttemptReport")" href="@baseURL\Reports\Index">Reports</a>
                    </li>
                }
                @if (model.RoleId == 2)
                {

                    <li class="nav-item @Html.IsSelected(controller:"User",action: "Index")">
                        <i class="fas fa-users"></i>
                        <a class="nav-link @Html.IsSelected(controller:"User",action: "Index")" href="@baseURL\User\Index">Users</a>
                    </li>
                    <li class="dropdown mr-4">
                        <a class="nav-link @Html.IsSelected(controller:"Courses,Quiz",action: "Index")" href="#" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="fas fa-book-open"></i> Learning</a>
                            <div class="dropdown-menu create-learning" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="@Url.Action("Index", "Courses")">
                                    <img class="course-img" src="~/assets/images/course.png" width="20%" />
                                    Course
                                </a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Quiz")">
                                    <img class="quiz-image" src="~/assets/images/quiz.png" width="20%" />
                                    Quiz
                                </a>
                            </div>
                    </li>
                    <li class="dropdown mr-4">
                        <a class="nav-link @Html.IsSelected(controller:"Reports",action: "LearningCompletionReport,UserReport,UserProgressReport,LearningProgressCompletionReport")" href="#" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-poll"></i> Reports</a>
                        <div class="dropdown-menu create-learning" aria-labelledby="dropdownMenuButton1">
                            <a class="dropdown-item" href="@Url.Action("LearningCompletionReport", "Reports")">
                                <i class="fas fa-book-open"></i>
                                Learning
                            </a>
                            <a class="dropdown-item" href="@Url.Action("UserReport", "Reports", new { isActive = false })">
                                <i class="fas fa-users"></i>
                                User
                            </a>
                        </div>
                    </li>
                }
                @if (model.RoleId == 1)
                {
                }
                <li class="nav-item">
                    <a class="nav-link" href="#"
                       data-toggle="tooltip"
                       data-placement="bottom"
                       title="@Html.Raw(helpDetails)">
                        <i class="far fa-question-circle"></i>
                    </a>
                </li>
                <li class="dropdown mr-3">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownnotification" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="far fa-bell"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right notification-menu" aria-labelledby="navbarDropdownnotification">
                        <div class="noti-menu-header">
                            <h6>Notifications</h6>
                            <p>You have 8 new notifications</p>
                        </div>
                        <a class="dropdown-item" href="#"> <span class="blue-dot"></span> <span> This is Dummy Notification </span></a>
                        <a class="dropdown-item" href="#"> <span class="blue-dot"></span>  <span> This is another Dummy Notification </span></a>
                        <a href="#" class="dropdown-item view-all">View All <i class="fas fa-chevron-right"></i></a>
                    </div>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link" href="#"><i class="far fa-bell"></i></a>
                    </li>*@
                <li class="nav-item user-details">
                    <span class="user-name">@fullname</span>
                    @*<p class="user-role">Student</p>*@
                </li>
                <li class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                        @if (profileImage != "")
                        {
                            <img id="user_img" class="fas fa-user-circle mb-4" width="20" height="20" src="@profileImage" />
                        }
                        else
                        {
                            <i class="fas fa-user-circle font24"></i>

                        }
                    </a>
                    <div class="dropdown-menu dropdown-menu-right user-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("MyProfile", "Account")"><i class="fas fa-user"></i> My Profile</a>

                        <a class="dropdown-item" href="@Url.Action("Logout", "Login")"><i class="fas fa-power-off red-color"></i> Log Out</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container-fluid">
            <span class="text-muted">&copy; 2019 - 2020 Rocket Technologies</span>
            <div class="terms-policy">
                <ul class="list-inline mb-0">
                    @*<li class="list-inline-item"> <a href="#">Privacy Policy</a></li>*@
                    <li class="list-inline-item"><a href="#">Terms & Conditions</a></li>
                    <li class="list-inline-item"><a href="https://www.rockettech.co.nz/lms/" target="_blank">About us</a></li>
                    @*<li class="list-inline-item"><a href="#">Help</a></li>*@
                </ul>

            </div>            
        </div>
    </footer>
    <script src="~/Scripts/slimscroll/jquery.slimscroll.js"></script>
    <script src="~/Scripts/lib/main-js.js"></script>

