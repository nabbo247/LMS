@model List<LMSBL.DBModels.tblQuiz>

@{
    ViewBag.Title = "Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<body>
    <div class="main-container container">
        <div class="row pt-3" style="float:right;">
            @*<div class="col-6 col-sm-6 col-md-6">
                    <i class="fa fa-search" aria-hidden="true"></i> <input class="search-box" type="text" placeholder="Search">
                </div>
                <div class="form-inline form-group col-4 col-sm-4 col-md-4">
                    <label class="">Company</label>
                    <select class="form-control ml-5" id="exampleFormControlSelect1">
                        <option>Select Company</option>
                    </select>
                </div>*@
            <div class="form-group col-2 col-sm-2 col-md-2">
                <a href="@Url.Action("AddQuiz", "Quiz")"><button type="button" class="btn pl-5 pr-5 text-center btn-warning pull-right">ADD</button></a>
            </div>
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Quiz Id</th>
                    <th scope="col">Quiz Name</th>
                    <th scope="col">Quiz Description</th>                  
                    <th scope="col" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var quiz in Model)
                    {
                        <tr>
                            <th scope="row">@quiz.QuizId</th>
                            <td>@quiz.QuizName</td>
                            <td>@quiz.QuizDescription</td>
                                                        
                            <td>
                                <button type="button" onclick="location.href(@Url.Action("EditUser", "User", new { id = quiz.QuizId }))"
                                        class="btn text-center btn-warning">
                                    Edit
                                </button>
                                <button type="button" onclick="location.href(@Url.Action("EditUser", "User", new { id = quiz.QuizId }))"
                                        class="btn text-center btn-warning">
                                    View
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</body>

