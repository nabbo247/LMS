@model List<LMSBL.DBModels.TblCourse>
@{
    ViewBag.Title = "GetAllInActiveCourses";
}
<body>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Get All Inactive Courses</h2>
                <p class="pageheader-text">Get data of all Inactive courses.</p>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">GetAllInActiveCourses</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Course Name</th>
                                <th scope="col">Course Details</th>
                                <th scope="col">Course Category</th>
                                <th scope="col">Course Path</th>
                                <th scope="col">IsActive</th>
                                <th scope="col">Tenant Name</th>
                                <th scope="col" colspan="2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <th scope="row">@course.CourseId</th>
                                    <td>@course.CourseName</td>
                                    <td>@course.CourseDetails</td>
                                    <td>@course.CourseCategory</td>
                                    <td>@course.CoursePath</td>
                                    <td style="color:red;text-align:center"><i class="fas fa-fw fa-times"></i></td>
                                    <td>@course.TenantName</td>
                                    <td>
                                        <a href="@Url.Action("DeleteCourse", "Courses",new { id=course.CourseId,isActive=false})">
                                            <i class="fas fa-fw fa-trash" title="Activate User"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</body>

