@model List<LMSBL.DBModels.TblAssignmentAndTracking>
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/_ViewStart.cshtml";
}
<body>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
        <div class="section-block">
            <h5 class="section-title">Courses Active/ Inactive tabs</h5>
        </div>
        <div class="col-sm-12" style="text-align:right;">
            <a href="@Url.Action("AddCourse", "Courses")">
                <i class="fas fa-fw fa-plus" style="font-size:16pt" title="Add Course"></i>
            </a>
        </div>
        <div class="tab-outline">
            <ul class="nav nav-tabs" id="CoursesTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="activetab" data-toggle="tab" href="#activecourses" role="tab" aria-controls="home" aria-selected="true">Active Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="inactivetab" data-toggle="tab" href="#inactivecourses" role="tab" aria-controls="profile" aria-selected="false">Inactive Courses</a>
                </li>

            </ul>
            <div class="tab-content" id="CoursesTabContent">
                <div class="tab-pane fade show active" id="activecourses" role="tabpanel" aria-labelledby="activetab">
                    @Html.Action("GetAllActiveCourses", "Courses")
                </div>
                <div class="tab-pane fade" id="inactivecourses" role="tabpanel" aria-labelledby="inactivetab">
                    @Html.Action("GetAllInActiveCourses", "Courses")
                </div>

            </div>
        </div>
    </div>
</body>