@model List<LMSBL.DBModels.TblUser>
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/_ViewStart.cshtml";
}
<body>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
        <div class="section-block">
            <h5 class="section-title">User Active/ Inactive tabs</h5>
        </div>
        <div class="col-sm-12" style="text-align:right;">
            <a href="@Url.Action("AddUser", "User")">
                <i class="fas fa-fw fa-plus" style="font-size:16pt" title="Add Tenant"></i>
            </a>
        </div>
        <div class="tab-outline">
            <ul class="nav nav-tabs" id="TenantTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="activetab" data-toggle="tab" href="#activeuser" role="tab" aria-controls="home" aria-selected="true">Get Active Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="inactivetab" data-toggle="tab" href="#inactiveuser" role="tab" aria-controls="profile" aria-selected="false">Get Inactive Users</a>
                </li>

            </ul>
            <div class="tab-content" id="TenantTabContent">
                <div class="tab-pane fade show active" id="activeuser" role="tabpanel" aria-labelledby="activetab">
                    @Html.Action("GetAllActiveUsers", "User")
                </div>
                <div class="tab-pane fade" id="inactiveuser" role="tabpanel" aria-labelledby="inactivetab">
                    @Html.Action("GetAllInActiveUsers", "User")
                </div>

            </div>
        </div>
    </div>
</body>