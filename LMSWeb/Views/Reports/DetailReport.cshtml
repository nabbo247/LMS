@model List<LMSBL.DBModels.MainReportModel>
@{
    ViewBag.Title = "Detail Report";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}


<div class="container-fluid mt-4 mb-4 pl-4 pr-4">
    <div class="row mb-1">
        <div class="col">
            <h4>Detail Activity Report</h4>
        </div>
    </div>
    <div class="mt-5 pt-3 pl-3 pr-3 course-list-container">
        <div class="row">            
            <div class="col search-container">
                <i class="fas fa-search"></i>
                <input class="search-box" type="text" id="txtSearch" placeholder="Search Course/Quiz by name..." />
            </div>

            <div class="col blue-color text-right">
                <b> Learning - </b> @Model[0].ActivityName <br /><b> Type</b> - @Model[0].ActivityType
            </div>
        </div>
        <div class="row mt-3" id="dvActivityData">
            <div class="table-responsive">
                <table class="table" id="activityTable">
                    <thead>
                        <tr>
                            <th scope="col" style="text-align:center;">Attempts</th>
                            <th scope="col" class="mobile-hide" style="text-align:center;">Duration (Mins)</th>
                            <th scope="col"  class="mobile-hide" style="text-align:center;">Time Spent</th>
                            <th scope="col" class="mobile-hide">Attempted Date</th>
                            <th scope="col" style="text-align:center;">Score</th>
                            <th scope="col" style="text-align:center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {

                            if (Model.Count > 0)
                            {

                                foreach (var activity in Model)
                                {
                                    var score = "-";
                                    <tr>

                                        <td style="text-align:center;">@activity.ActivityAttempts</td>
                                        @if (activity.ActivityDuration == "0")
                                        {
                                            <td class="mobile-hide" style="text-align:center;">-</td>
                                        }
                                        else
                                        {
                                            var durationInSeconds = Convert.ToInt32(activity.ActivityDuration) * 60;
                                            TimeSpan t = TimeSpan.FromSeconds(durationInSeconds);
                                            var duration = string.Format("{0:D2}:{1:D2}", (int)t.Minutes, t.Seconds);
                                            <td class="mobile-hide" style="text-align:center;">@duration</td>
                                        }
                                        <td class="mobile-hide" style="text-align:center;">@activity.ActivityCompletionTime</td>
                                        @if (activity.ActivityAttemptedDate == "")
                                        {
                                            <td class="mobile-hide" style="text-align:center;">-</td>
                                        }
                                        else
                                        {
                                            <td class="mobile-hide" >@activity.ActivityAttemptedDate</td>
                                        }


                                        @if (!string.IsNullOrEmpty(activity.ActivityScore))
                                        {
                                            score = Convert.ToString((Convert.ToInt32(activity.ActivityScore) * 100) / Convert.ToInt32(activity.ActivityQuestionCount)) + "%";
                                        }
                                        <td style="text-align:center;">@score</td>

                                        <td style="text-align:center;"><a href="@Url.Action("AttemptReport", "Reports", new { activityId = activity.ActivityId, attempt = activity.ActivityAttempts  })" class="login" title="View Detail"><img src="~/assets/images/eye.png" /></a></td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" align="center">No Activity Available</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No Activity Available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        $('#activityTable').DataTable({
            "aaSorting": [[ 0, "desc" ]],
            "paging": true,
            "ordering": true,
            "info": true,
            "bFilter": true,
            "pageLength": 10,
            "pagingType": "full_numbers",
            //language: {
            //    paginate: {
            //        next: '&#8594;', // or '→'
            //        previous: '&#8592;' // or '←'
            //    }
            //}
        });

        $('#activityTable_filter').hide();

        $('#txtSearch').on('keyup', function () {

            $.fn.dataTable.ext.search.push(function (settings, searchData) {
                var term = $('#txtSearch').val().toLowerCase()
                for (var i = 0; i < searchData.length; i++) {
                    if (searchData[i].toLowerCase().indexOf(term) == 0) {
                        return true;
                    }
                }
                return false;
            });
            var table = $('#activityTable').DataTable();
            table.draw();
        });
    });


</script>

