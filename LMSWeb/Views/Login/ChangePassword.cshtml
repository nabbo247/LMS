@model LMSBL.DBModels.TblUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Reset Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/CSS/lib/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</head>

<body>

    @using (Html.BeginForm("SubmitChangePassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <!------ Include the above in your HEAD tag ---------->

        <div class="sidenav">
        </div>
        <div class="main">
            <div class="corner-logo">
                <img src="~/assets/images/rockettechpng-1.png" style="max-width:159px;max-height:70px;" />
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="login-form">
                    <h1 class="main-h3">CHANGE PASSWORD</h1>

                    <form>
                        @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Message"])))
                        {
                            <div id="dvMessage" style="color:green; margin-bottom:10px;">@TempData["Message"]</div>
                            <button type="button" onclick="location.href='@Url.Action("Index", "Login")';return false;" class="btn btn-black">Login</button>
                        }
                        else
                        {
                            @* <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="basic-addon1"><i class="fa fa fa-user"></i></span>
                                                </div>
                                                @Html.TextBoxFor(model => model.EmailId, new { @class = "col-9 ml-0 form-control", @readonly = "readonly" })
                                                <span class="required">&#10026;</span>
                                </div>*@
                    <div class="input-group">
                        @Html.HiddenFor(model => model.EmailId)
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fa fa fa-user"></i></span>
                        </div>
                        @Html.PasswordFor(model => model.Password, new { @class = "col-9 ml-0 form-control", @id = "password" })
                        <span class="required">&#10026;</span>
                    </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa fa fa-user"></i></span>
                                </div>
                                @Html.PasswordFor(model => model.Password, new { @class = "col-9 ml-0 form-control", @id = "confirmPassword" })
                                <span class="required">&#10026;</span>

                            </div>
                            <div class="input-group" style="padding-left:60px;">
                                <button type="button" onclick="location.href='@Url.Action("Index", "Login")';return false;" class="btn btn-black">Login</button>
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <button type="submit" onclick="return CheckRequired();" class="btn btn-black">Change</button>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    }

    <script type="text/javascript">
        function CheckRequired() {
            if ($("#password").val() == "") {
                alert("Please enter Password");
                return false;
            }
            if ($("#confirmPassword").val() == "") {
                alert("Please enter Confirm Password");
                return false;
            }

            if ($("#password").val() != $("#confirmPassword").val()) {
                alert("Password not matched");
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
